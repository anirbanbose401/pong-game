{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "pong.cpp",
                "-o",
                "pong",
                "-I${workspaceFolder}/sfml/include",
                "-L${workspaceFolder}/sfml/lib",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-lsfml-audio"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
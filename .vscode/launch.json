{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug PongGame",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/PongGame",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb", // Adjust the path for your system
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}